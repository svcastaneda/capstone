  <fieldset>
		<legend><%= f.label "Course days:" %></legend>
		<% CourseDay.each do |d| %>
      <div class="inlineblock checkbox_cols">
				<%= t.check_box d.id, {checked: @course.dates.include?(d.id) } %>
				<%= t.label d.day_type, for: "dates_#{d.id}" %>
			</div>
		<% end %>
  </fieldset>
  <fieldset>
		<legend><%= f.label "Course times:" %></legend>
		<% CourseTime.each do |t| %>
      <div class="inlineblock checkbox_cols">
				<%= t.check_box t.id, {checked: @course.times.include?(t.id) } %>
				<%= t.label t.day_type, for: "times_#{t.id}" %>
			</div>
		<% end %>
  </fieldset>
	
	
	<div class="form-group">
		<div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
			<%= f.submit "submit", class: "btn btn-sm btn-primary form-control" %>
